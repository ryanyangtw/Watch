  <%= search_form_for q ,:url=> admin_products_search_path, method: :post, :class=>"navbar-form navbar-left", :role=>"search" do |f| %>
    <div class="form-group">
        <div class="input-group">
          <% value = params[:q][:number_or_title_or_description_cont] if params[:q]%>
          <%= f.search_field(:number_or_title_or_description_cont, value: value, :class=>"form-control input-nonhidden", :id=>"navbarInput-01", :type=>"search", :placeholder=>"Search") %>

          
          <span class="input-group-btn">

            <%= button_tag(:type => 'submit', :class => 'btn btn-search') do %>
                <span class="glyphicon glyphicon-search"></span>
            <% end %>

          </span>  
        </div>
    </div>
  <%end%>