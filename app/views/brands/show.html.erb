 <!-- 精選品牌列表  -->
<div class="container brand-contain " id="brand">
    <div class="col-md-12 inline brain-title">
        <div class="col-md-1 col-xs-2">
          <%= image_tag('brand01.png') %>
            <!-- <img src="img/brand01.png"> -->
        </div>
        <div class="col-md-8 title col-xs-12 hidden-xs  ">
            <h3><strong>BRAND 精選品牌</strong></h3>
            <p>||</p>
            <h4 style="color:#B79A77"> <%= @brand.title %> <%= @brand.chinese_title %> </h4>
        </div>
        <div class="col-md-8 title col-xs-8 visible-xs down-xs  text-left">
            <h4><strong>BRAND 精選品牌</strong></h4>
        </div>
        <div class="col-xs-8   down-xs  visible-xs text-left">
            <h5 style="color:#B79A77"> <%= @brand.title %> <%= @brand.chinese_title %></h5>
        </div>
    </div>

    <% @products.each_with_index do |product, index| %>
      <% if(index%3 == 0)%>
          <div class="row">
      <% end %>
        <div class="col-md-4 down-xl hidden-xs">
          <%= link_to(product_path(product)) do %>
            <div class="pic"> 
              <%= image_tag(product.display_photo.try(:image_url), class: "watch_l_img") %>
            </div> 
            <h4 class="down-sm right-sm"> <%= product.title %> </h4>
          <% end %>
          <!-- <a href="detail.html"><h4 class="down-sm right-sm ">CHANEL陶瓷女用腕錶</h4></a> -->
          <h5 class="right-sm">#<%= product.number %></h5>
        </div>

         <div class="col-xs-12 down-xl visible-xs">
          <%= link_to(product_path(product)) do %>
            <div class="phone_pic"> 
              <%= image_tag(product.display_photo.try(:image_url), class: "watch_l_img") %>
            </div> 
            <h4 class="down-sm right-sm"> <%= product.title %> </h4>

            
          <% end %>
          <!-- <a href="detail.html"><h4 class="down-sm right-sm ">CHANEL陶瓷女用腕錶</h4></a> -->
          <h5 class="right-sm">#<%= product.number %></h5>
        </div>
      
      <% if(index%3 == 2 || index == @products.size - 1)%>
        </div>
      <% end %>

    <% end %>


    <div style = "text-align:center;">
      <%= will_paginate @products, renderer: BootstrapPagination::Rails %>
    </div>

