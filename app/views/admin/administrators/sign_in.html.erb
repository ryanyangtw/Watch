
<div class="col-md-offset-3 col-md-6 well">
  <h3>請登入管理者賬號</h3>

  <hr>
  <%= form_tag(admin_path, method: :post) do %>
    
    <div class="form-group">
      <%= label_tag(:account, '帳號') %>
      <%= text_field_tag(:account, params[:account] || '', class: "form-control")%>
    </div>

    <div class="form-group">
      <%= label_tag(:password, '密碼') %>
      <%= password_field_tag(:password, params[:password] || '', class: "form-control") %>
    </div>

    <div class="form-group">
      <%= submit_tag("登入", class: "btn btn-info") %>
    </div>
  <% end %>

</div>