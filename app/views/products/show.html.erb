    <!-- 桌機版商品內容 -->
    <div class="container-fluid detail-bg ">
        <div class="container text-center">
            <div class="col-md-4 col-md-offset-4">
                <div class="detail-title down-md col-md-10 col-md-offset-1 hidden-xs">
                    <h3> <%= @product.brand.title %> </h3>
                </div>
                <div class="col-md-10 col-md-offset-1 down-xs hidden-xs">
                    <h4><%= @product.title %></h4>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4   down-sm">
                <div id="Fader" class="fader-d">
  
                    <% @product.banners.order(id: :asc).each do |banner| %>
                      <%= image_tag(banner.image_url, class: "slide img-responsive") %>
                    <% end %>
                    <%#= image_tag("home03.png", class: "slide img-responsive") %>
                    <%#= image_tag("contact01.png", class: "slide img-responsive") %>
                    <%#= image_tag("home03.png", class: "slide img-responsive") %>
                    <%#= image_tag("home03.png", class: "slide img-responsive") %>
                    <%#= image_tag("home03.png", class: "slide img-responsive") %>
                    <%#= image_tag("home03.png", class: "slide img-responsive") %>
                    <div class="fader_controls text-center hidden-xs">
                        <ul class="pager_list "></ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-md-offset-4  down-sm"></div>
        </div>
    </div>

    <div class="container">
        <div class=" col-md-6 down-sm col-xs-12">
            <div class="row">
                <h5><strong> <%= @product.title %> </strong></h5>
                <%= image_tag("detail01.png", class: "up-sm") %>
                <!-- <img src="img/detail01.png" class="up-sm"> -->
            </div>
            <div class="row">
                <table>
                  <% if(@product.number?) %>
                    <tr>
                        <td class="column">編號：</td>
                        <td> <%= @product.number %> </td>
                    </tr>
                  <% end %>

                  <% if @product.status? %>
                    <tr>
                        <td class="column">狀況：</td>
                        <td> <%= @product.status %> </td>
                    </tr>
                  <% end %>

                  <% if @product.mechanism? %>
                    <tr>
                        <td class="column">機芯：</td>
                        <td> <%= @product.mechanism %> </td>
                    </tr>
                  <% end %>

                  <% if @product.case? %>
                    <tr>
                        <td class="column">錶殼：</td>
                        <td> <%= @product.case %> </td>
                    </tr>
                  <% end %>

                  <% if @product.face? %>
                    <tr>
                        <td class="column">面盤：</td>
                        <td> <%= @product.face %> </td>
                    </tr>
                  <% end %>

                  <% if @product.function? %>
                    <tr>
                        <td class="column">功能：</td>
                        <td> <%= @product.function %> </td>
                    </tr>
                  <% end %>

                  <% if @product.strap? %>
                    <tr>
                        <td class="column">錶帶：</td>
                        <td> <%= @product.strap %></td>
                    </tr>
                  <% end %>

                  <% if @product.price? %>
                    <tr>
                        <td class="column">售價：</td>
                        <td> <%= @product.price %> </td>
                    </tr>
                  <% end %>

                </table>
            </div>
        </div>

        <div class="col-md-6 down-sm col-xs-12">
          
            <div class="col-md-12 col-xs-12" style="height:250px;">
              <iframe style="border:none;" width="100%" height="100%" src="<%= @product.video_url %>" ></iframe>
            </div>
            <div class="visible-xs col-xs-12" style="height:40px;"></div>
        </div>
    </div>