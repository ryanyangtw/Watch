.fader-d {
    position: relative;
    padding-top: 80%;
    overflow: hidden;
    height: auto;
}

.fader-d .slide {
    position: absolute;
    width: 100%;
    height: 50%;
    top: 0;
    z-index: 1;
    opacity: 0;
}

.fader-d img.slide {
    height: auto;
}

.fader-d .prev,
.fader-d .next {
    position: absolute;
    height: 80px;
    line-height: 55px;
    width: 50px;
    font-size: 100px;
    text-align: center;
    color: #fff;
    top: 50%;
    left: 0;
    z-index: 4;
    margin-top: -25px;
    cursor: pointer;
    opacity: .7;
    transition: all 150ms;
}

.fader .prev:hover,
.fader .next:hover {
    opacity: 1;
}

.fader .next {
    left: auto;
    right: 0;
}

.fader-d .pager_list {
    position: absolute;
    width:760px;
    height: 0px;
    line-height: 40px;
    bottom: 15px;
    text-align: center;
    z-index: 4;
    margin-left: -40px;
}

.fader-d .pager_list li {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin: 0 7px;
    background: #B69A72;
    text-indent: -999px;
    border-radius: 999px;
    cursor: pointer;
    transition: all 150ms;
}

.fader-d .pager_list li:hover,
.fader-d .pager_list li.active {
    opacity: 1;
    background: #339999;
}
