    .fader-d {
        position: relative;
        padding-top: 80%;
        overflow: hidden;
        height: auto;
    }
}

@media screen and (max-width: 480px) {
    .fader .slide {
        position: absolute;
        text-align: center;
        width: 100%;
        height: 50%;
        top: 0;
        z-index: 1;
        opacity: 0;
    }
    .fader {
        position: relative;
        padding-top: 57%;
        overflow: hidden;
        height: 300px;
    }
}


